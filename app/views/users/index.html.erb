<h1 align="center">All youBloggers</h1>
<div align="center">
  <% @users.each do |user| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-2 col-md-offset-5">
          <li><%= link_to gravatar_for(user), user_path(user) %></li>
          <li class="article-title">
            <%= link_to user.username, user_path(user) %>
          </li>
          <li><small><%= pluralize(user.articles.count, "article") if user.articles %></small></li>
          <%  if logged_in? && current_user.admin? %>
            <li><%= link_to  "Delete", user_path(user), method: :delete,
                  data: {confirm: "Are you sure you want to delete?"} %></li>
          <% end %>
        </div>
      </div>
    </ul>
  <% end %>
  <%= will_paginate %>
</div>
